<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:ignore="SpeakableTextPresentCheck"
    tools:context=".LoginUser">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/const_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/layout_bg"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/const_"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/const_"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.806">


            <EditText
                android:id="@+id/et_nameP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="ඔසුසලේ නම"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/emailU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="ඊමේල් ලිපිණය"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_nameP"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="ලියාපදිංචි අංකය"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/nameU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="පරිෂිලක නම"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="දිස්ත්‍රික්කය‍‍‍‍"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/contactU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="දුරකථන අං‍‍‍‍"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <RelativeLayout
                android:id="@+id/redio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/et_district"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="13dp"
                    android:layout_centerVertical="true"
                    android:text="ඔසුසලේ වර්ගය"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/rdgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <RadioButton
                        android:id="@+id/radio_ret"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="තොග   " />

                    <RadioButton
                        android:id="@+id/radio_whal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="සිල්ලර"
                        android:checked="true"/>
                </RadioGroup>

            </RelativeLayout>

            <EditText
                android:id="@+id/et_email_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/redio_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="ඊමේල් ලිපිණය"
                android:visibility="gone"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/idU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="ID අංකය"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_contactP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email_p"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:visibility="gone"
                android:hint="දුරකථන අං"
                android:inputType="number"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/passU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="මුරපදය"
                android:inputType="textPassword"
                android:minHeight="48dp"
                />

            <EditText
                android:id="@+id/confpassU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="මුරපදය නැවත යොදන්න"
                android:inputType="textPassword"
                android:minHeight="48dp"
                />

            <Button
                android:id="@+id/location_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_contactP"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:minHeight="48dp"
                android:visibility="gone"
                android:text="ස්ථානය තෝරන්න." />

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_set"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="ලියාපදිංචි වන්න."
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_regU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confpassU"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="ලියාපදිංචි වන්න." />

            <TextView
                android:id="@+id/change_to_pharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="පරිෂිලකයෙක් ලෙස ලියාපදිංචි වන්න."
                android:visibility="gone"/>

            <TextView
                android:id="@+id/change_to_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_regU"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="ඔසුසලක් ලෙස ලියාපදිංචි වන්න."
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="MRAEMA හි ලියාපදිංචි වන්න."
                android:textSize="20dp" />


        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
