<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".selectMedicine.OnePharmacyFragment"
    android:background="@drawable/fragment_background"
    android:layout_margin="5dp"
    android:outlineAmbientShadowColor="@color/black">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/fragmentTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="pharmacy name"
        android:textSize="20sp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_medies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentTopic"
        android:layout_centerHorizontal="true"
        android:background="@drawable/search_background"
        android:layout_marginBottom="10dp"
        app:queryHint="බෙහෙත් හොයන්න." />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_medies"
        android:layout_above="@+id/intruction">

        <ListView
            android:id="@+id/medies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/intruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/direct_oder"
        android:layout_centerHorizontal="true"
        android:text="ඉහත ඇති ඖෂද තෝරා ඇනවුම් කරන්න.නැත්නම්" />


    <Button
        android:id="@+id/direct_oder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="තුන්ඩුව හරහා ඇනවුම් කරන්න." />



</RelativeLayout>